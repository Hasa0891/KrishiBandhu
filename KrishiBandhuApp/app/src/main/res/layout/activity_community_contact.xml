<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".CommunityContactActivity">

    <!-- Title for the Community Contact Page -->
    <TextView
        android:id="@+id/communityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     কৃষক সমাজ: অনলাইন যোগাযোগ"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- ScrollView to make the content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginTop="48dp">

        <!-- LinearLayout to hold each farmer's details -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Farmer 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/farmer1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="মো. আলমগীর হোসেন"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/farmer1Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="বয়স: ৩৫, পুরুষ\nস্থান: কুমিল্লা, বাংলাদেশ"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/chatBtnFarmer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="চ্যাট শুরু করুন"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"
                        android:onClick="startChat"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Farmer 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/farmer2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="শমসের আলী"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/farmer2Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="বয়স: ৪২, পুরুষ\nস্থান: রাজশাহী, বাংলাদেশ"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/chatBtnFarmer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="চ্যাট শুরু করুন"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"
                        android:onClick="startChat"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Farmer 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/farmer3Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="নুরুন্নাহার বেগম"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/farmer3Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="বয়স: ৩৫, মহিলা\nস্থান: বরিশাল, বাংলাদেশ"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/chatBtnFarmer3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="চ্যাট শুরু করুন"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"
                        android:onClick="startChat"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Farmer 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/farmer4Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="আলী হোসেন"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/farmer4Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="বয়স: ৫০, পুরুষ\nস্থান: চট্টগ্রাম, বাংলাদেশ"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/chatBtnFarmer4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="চ্যাট শুরু করুন"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"
                        android:onClick="startChat"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Farmer 5 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/farmer5Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="শাহীন রহমান"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/farmer5Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="বয়স: ৩৮, পুরুষ\nস্থান: ময়মনসিংহ, বাংলাদেশ"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/chatBtnFarmer5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="চ্যাট শুরু করুন"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"
                        android:onClick="startChat"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
