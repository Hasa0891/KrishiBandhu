<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_3"
    tools:context=".TechnicalAdviceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/advisoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultancy Service"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/pestControlTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insects and Disease Control"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/pestControlTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insects and disease control mechanism based on region:\n1. Use mild insecticides\n2. Use green compost\n3. Examine soil"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/bestPracticesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Farming Technique"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/bestPracticesTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Give water in the right time\n2. Follow environmental friendly farming technique"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnSchemes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Government and NGO Farming Schemes"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:onClick="onSchemesButtonClick"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
